---
import type { Project } from '../types';
interface Props {
  project: Project;
}
const { project } = Astro.props;
---

<article class="group rounded-lg overflow-hidden shadow-lg transition-all hover:shadow-xl dark:bg-gray-800">
  <img 
    src={project.image} 
    alt={project.title}
    width="400"
    height="225"
    class="w-full h-48 object-cover"
    loading="lazy"
  />
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{project.title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
    <div class="flex flex-wrap gap-2">
      {project.tags.map(tag => (
        <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-sm">
          {tag}
        </span>
      ))}
    </div>
    <a 
      href={project.link} 
      class="mt-4 inline-block text-primary-500 hover:text-primary-600 dark:text-primary-400 dark:hover:text-primary-300"
      target="_blank"
      rel="noopener noreferrer"
    >
      Ver proyecto â†’
    </a>
  </div>
</article>