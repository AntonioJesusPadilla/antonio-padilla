---
import { Icon } from '@iconify/react';
import ThemeToggle from '../components/ThemeToggle';
import '../styles/global.css';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Portfolio profesional" />
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors duration-200">
  <header class="container mx-auto px-4 py-6 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold">Portfolio</a>
    <nav class="flex items-center gap-6">
      <a href="#projects" class="hover:text-primary-500">Proyectos</a>
      <a href="#about" class="hover:text-primary-500">Sobre mí</a>
      <a href="#contact" class="hover:text-primary-500">Contacto</a>
      <ThemeToggle client:load />
    </nav>
  </header>

  <main class="container mx-auto px-4 py-8">
    <slot />
  </main>

  <footer class="bg-gray-100 dark:bg-gray-800 py-8 mt-12">
    <div class="container mx-auto px-4 text-center">
      <div class="flex justify-center gap-4 mb-4">
        <a href="https://github.com" target="_blank" rel="noopener noreferrer">
          <Icon icon="mdi:github" class="w-6 h-6" />
        </a>
        <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer">
          <Icon icon="mdi:linkedin" class="w-6 h-6" />
        </a>
      </div>
      <p>© {new Date().getFullYear()} Tu Nombre. Todos los derechos reservados.</p>
    </div>
  </footer>
</body>
</html>