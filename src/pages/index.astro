  <script>
    // Animación de texto dinámico
    const roles = [
      'Desarrollador Full Stack',
      'Especialista en IA',
      'Desarrollador Frontend',
      'Desarrollador Backend',
      'Analista Power BI',
      'Desarrollador Python'
    ];
    
    let currentRole = 0;
    const dynamicText = document.getElementById('dynamic-text');
    
    function typeText(text, callback) {
      dynamicText.textContent = '';
      let i = 0;
      const typing = setInterval(() => {
        dynamicText.textContent += text[i];
        i++;
        if (i >= text.length) {
          clearInterval(typing);
          setTimeout(callback, 2000);
        }
      }, 100);
    }
    
    function deleteText(callback) {
      const text = dynamicText.textContent;
      let i = text.length;
      const deleting = setInterval(() => {
        dynamicText.textContent = text.slice(0, i);
        i--;
        if (i < 0) {
          clearInterval(deleting);
          callback();
        }
      }, 50);
    }
    
    function animateRoles() {
      typeText(roles[currentRole], () => {
        deleteText(() => {
          currentRole = (currentRole + 1) % roles.length;
          animateRoles();
        });
      });
    }
    
    // Iniciar animación después de 1 segundo
