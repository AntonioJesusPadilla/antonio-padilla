---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import projects from '../data/projects.json';
---

<BaseLayout title="Portfolio profesional">
  <section class="py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-6">Hola, soy [Tu Nombre]</h1>
      <p class="text-xl mb-8">Desarrollador especializado en...</p>
      
      <h2 id="projects" class="text-2xl font-bold mb-6">Proyectos destacados</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map(project => (
          <ProjectCard project={project} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>